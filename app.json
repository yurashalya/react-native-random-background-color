{
  "expo": {
    "name": "background-color-app",
    "slug": "background-color-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/apple-touch-icon.png",
    "scheme": "Change background color",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "/assets/images/apple-touch-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/apple-touch-icon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
